---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";

// Put these files here:
// src/assets/img/research/pipeline-wide.webp
// src/assets/img/research/generative.webp
// src/assets/img/research/safety.webp
// src/assets/img/research/amr.webp
// src/assets/img/research/multimodal.webp
import pipelineWide from "../assets/img/research/pipeline-wide.webp";
import generativeImg from "../assets/img/research/generative.webp";
import safetyImg from "../assets/img/research/safety.webp";
import amrImg from "../assets/img/research/amr.webp";
import multimodalImg from "../assets/img/research/multimodal.webp";

const AREAS = [
  {
    title: "Generative design",
    desc: "Create novel small molecules optimized for target activity and developability—not just rediscover known scaffolds.",
    tags: ["Diffusion", "Property control", "Novelty"],
    img: generativeImg,
  },
  {
    title: "Safety-aware modeling",
    desc: "Treat toxicity as a first-class objective by embedding safety predictors directly into prioritization and design loops.",
    tags: ["Multitask", "Toxicity", "Selectivity"],
    img: safetyImg,
  },
  {
    title: "AMR-focused discovery",
    desc: "Build adaptive ML frameworks to identify novel mechanisms and candidates against resistant Gram-negative pathogens.",
    tags: ["AMR", "Targets", "Validation"],
    img: amrImg,
  },
  {
    title: "Multi-modal mechanism of action",
    desc: "Integrate structure, transcriptomics, and high-content imaging to infer mechanism and guide experimental follow-up.",
    tags: ["RNA-seq", "Imaging", "Systems biology"],
    img: multimodalImg,
  },
];

const PRINCIPLES = [
  { title: "Safety-first", desc: "Efficacy without host safety doesn’t matter." },
  { title: "Biology-grounded", desc: "Models should reflect biological context, not just chemistry." },
  { title: "Validation-driven", desc: "Design choices are shaped by what we can test and learn." },
];
---

<BaseLayout title="Research — Yu Zhang" description="Research vision and focus areas in AI drug discovery.">
  <!-- Top banner -->
  <section class="relative overflow-hidden rounded-3xl border border-zinc-200 shadow-sm dark:border-zinc-800">
    <div
      class="absolute inset-0"
      style="background: linear-gradient(135deg, rgb(12,99,150) 0%, rgb(17,15,15) 18%, rgb(83,20,146) 100%);"
    ></div>

    <div class="relative p-8 sm:p-10 text-white">
      <h1 class="text-3xl sm:text-4xl font-semibold tracking-tight">Research</h1>

      <p class="mt-3 max-w-5xl text-white/85 leading-7">
        I work toward a future where therapeutics are not just discovered, but also <span class="font-semibold text-white">designed</span>:
        AI models that propose novel molecules while anticipating biological response and host safety.
        The goal is a unified workflow—generation, prediction, and experimental feedback—so candidates are potent by design and safer by default.
      </p>

      <!-- HERO IMAGE -->
      <div class="mt-6 overflow-hidden rounded-2xl ring-1 ring-white/15 bg-black/20">
        <Image
          src={pipelineWide}
          alt="Closed-loop workflow: Generate, Predict, Test, Learn"
          class="w-full max-h-[260px] sm:max-h-[300px] object-cover object-center"
          loading="lazy"
          decoding="async"
          format="webp"
          quality={82}
        />
      </div>

      <p class="mt-3 text-sm text-white/70">
        Closed-loop discovery: generate → predict → test → learn.
      </p>
    </div>
  </section>

  <!-- Focus areas -->
  <section class="mt-10">
    <div class="flex items-end justify-between gap-4">
      <h2 class="text-lg font-semibold tracking-tight">Focus areas</h2>
      <p class="text-sm text-zinc-500 dark:text-zinc-400">What I build and apply day-to-day.</p>
    </div>

    <div class="mt-4 grid gap-4 sm:grid-cols-2">
      {AREAS.map((a) => (
        <div class="rounded-2xl border border-zinc-200 bg-white p-7 shadow-sm dark:border-zinc-800 dark:bg-zinc-900/40">
          <div class="flex items-start gap-5">
            <Image
              src={a.img}
              alt=""
              class="h-24 w-24 sm:h-28 sm:w-28 lg:h-32 lg:w-32 rounded-2xl object-cover ring-1 ring-zinc-200 dark:ring-zinc-800"
              loading="lazy"
              decoding="async"
              format="webp"
              quality={80}
            />

            <div class="min-w-0">
              <h3 class="text-base font-semibold tracking-tight">{a.title}</h3>
              <p class="mt-2 text-sm leading-6 text-zinc-600 dark:text-zinc-300">{a.desc}</p>

              <div class="mt-4 flex flex-wrap gap-2">
                {a.tags.map((t) => (
                  <span class="rounded-full border border-zinc-200 px-2 py-0.5 text-xs text-zinc-600 dark:border-zinc-800 dark:text-zinc-300">
                    {t}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Principles -->
  <section class="mt-10">
    <h2 class="text-lg font-semibold tracking-tight">Principles</h2>
    <div class="mt-4 grid gap-4 sm:grid-cols-3">
      {PRINCIPLES.map((p) => (
        <div class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm dark:border-zinc-800 dark:bg-zinc-900/40">
          <div class="font-semibold">{p.title}</div>
          <div class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">{p.desc}</div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>