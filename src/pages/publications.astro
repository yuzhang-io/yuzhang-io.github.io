---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Publications — Yu Zhang" description="Selected publications and links.">
  <h1 class="text-3xl font-semibold tracking-tight">Publications</h1>
  <p class="mt-3 max-w-3xl text-zinc-600 dark:text-zinc-300 leading-7">
    Add a few selected papers here, then link to Google Scholar for the full list.
  </p>

  <ul class="mt-8 space-y-4">
    <li class="rounded-2xl border border-zinc-200 p-5 dark:border-zinc-800">
      <div class="font-semibold">Paper title (Year)</div>
      <div class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">
        Authors · Venue · Links (PDF / DOI / code)
      </div>
    </li>
    <li class="rounded-2xl border border-zinc-200 p-5 dark:border-zinc-800">
      <div class="font-semibold">Paper title (Year)</div>
      <div class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">
        Authors · Venue · Links
      </div>
    </li>
  </ul>
</BaseLayout>