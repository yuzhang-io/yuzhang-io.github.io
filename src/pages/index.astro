---
import BaseLayout from "../layouts/BaseLayout.astro";

const EMAIL = "yu.zhang@wyss.harvard.edu";
const LINKEDIN = "https://www.linkedin.com/in/yuzhang13/";
const SCHOLAR = "https://scholar.google.com/citations?user=IZ6qR4sAAAAJ&hl=en";
const GITHUB = "https://github.com/yuzhang-io";

const WYSS = "https://wyss.harvard.edu";
const MIT = "https://www.mit.edu";
const BROAD = "https://www.broadinstitute.org";
---

<BaseLayout
  title="Yu Zhang — AI for Drug Discovery"
  description="Yu Zhang, Ph.D. — AI & deep learning for drug discovery."
>
  <!-- Hero: everything inside the purplish tile -->
  <section class="relative overflow-hidden rounded-3xl border border-zinc-200 shadow-sm dark:border-zinc-800">
    <div
      class="absolute inset-0"
      style="background: linear-gradient(135deg, rgb(6,147,227) 0%, rgb(14,11,11) 15%, rgb(15,7,7) 61%, rgb(155,81,224) 100%);"
    ></div>

    <div class="relative p-8 sm:p-10">
      <div class="grid gap-8 lg:grid-cols-[360px_1fr] lg:items-start">
        <!-- Portrait (bigger) -->
        <div class="w-full">
          <img
            src="/img/portrait.jpg"
            alt="Yu Zhang portrait"
            class="w-full h-80 sm:h-96 lg:h-[420px] rounded-2xl object-cover ring-1 ring-white/25"
            loading="lazy"
          />
        </div>

        <!-- Text + links -->
        <div class="min-w-0 text-white">
          <h1 class="text-3xl sm:text-4xl font-semibold tracking-tight">Yu Zhang, Ph.D.</h1>

          <p class="mt-2 text-white/85">
            Postdoctoral Fellow @{" "}
            <a class="underline decoration-white/35 underline-offset-4 hover:decoration-white" href={WYSS} target="_blank" rel="noreferrer">
              Wyss Institute
            </a>{" "}
            |{" "}
            <a class="underline decoration-white/35 underline-offset-4 hover:decoration-white" href={MIT} target="_blank" rel="noreferrer">
              MIT
            </a>{" "}
            |{" "}
            <a class="underline decoration-white/35 underline-offset-4 hover:decoration-white" href={BROAD} target="_blank" rel="noreferrer">
              Broad Institute
            </a>
          </p>

          <p class="mt-4 text-white/95">
            <span class="font-semibold">Focus:</span> AI &amp; Deep Learning for drug discovery
          </p>

          <p class="mt-2 text-white/85">
            Email:{" "}
            <a class="underline decoration-white/35 underline-offset-4 hover:decoration-white" href={`mailto:${EMAIL}`}>
              {EMAIL}
            </a>
          </p>

          <!-- Buttons -->
          <div class="mt-5 flex flex-wrap gap-3">
            <a
              href={LINKEDIN}
              target="_blank"
              rel="noreferrer"
              class="rounded-xl bg-white/10 px-4 py-2 text-sm font-medium ring-1 ring-white/20 hover:bg-white/15"
            >
              LinkedIn
            </a>
            <a
              href={SCHOLAR}
              target="_blank"
              rel="noreferrer"
              class="rounded-xl bg-white/10 px-4 py-2 text-sm font-medium ring-1 ring-white/20 hover:bg-white/15"
            >
              Google Scholar
            </a>
            <a
              href={GITHUB}
              target="_blank"
              rel="noreferrer"
              class="rounded-xl bg-white/10 px-4 py-2 text-sm font-medium ring-1 ring-white/20 hover:bg-white/15"
            >
              GitHub
            </a>
            <a
              href="/Yu_Zhang_CV.pdf"
              class="rounded-xl bg-white px-4 py-2 text-sm font-semibold text-zinc-900 hover:bg-zinc-100"
            >
              Download CV
            </a>
          </div>

          <!-- One-paragraph About (inside tile) -->
          <div class="mt-6 rounded-2xl bg-white/10 p-5 ring-1 ring-white/15">
            <h2 class="text-base font-semibold tracking-tight">About</h2>
            <p class="mt-2 text-sm leading-6 text-white/85">
              I work at the intersection of deep learning and antibiotic discovery, building practical ML systems that connect
              large-scale screening data to safety-aware predictions and experimentally actionable hypotheses. My background in
              quantitative biology and computational modeling (Ph.D., Johns Hopkins) informs how I design models that generalize,
              remain interpretable where it matters, and support real-world validation.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Cards BELOW the hero -->
  <section class="mt-10 grid gap-4 sm:grid-cols-2">
    <a
      href="/research"
      class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-900/40"
    >
      <div class="font-semibold">Research</div>
      <div class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">
        Safety-aware discovery, multitask learning, screening → validation.
      </div>
    </a>

    <a
      href="/software"
      class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-900/40"
    >
      <div class="font-semibold">Software</div>
      <div class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">
        Open-source tools like mols2img and analysis pipelines.
      </div>
    </a>

    <a
      href="/publications"
      class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-900/40"
    >
      <div class="font-semibold">Publications</div>
      <div class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">
        Featured work + BibBase bibliography.
      </div>
    </a>

    <a
      href="/hiking"
      class="rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-900/40"
    >
      <div class="font-semibold">Hiking</div>
      <div class="mt-1 text-sm text-zinc-600 dark:text-zinc-300">
        Trails, trips, and peak lists.
      </div>
    </a>
  </section>
</BaseLayout>