---
const { title, href, desc, tag } = Astro.props;
---
<a
  href={href}
  class="group block rounded-2xl border border-zinc-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md
         dark:border-zinc-800 dark:bg-zinc-900/40"
>
  <div class="flex items-start justify-between gap-3">
    <h3 class="text-base font-semibold tracking-tight group-hover:underline">{title}</h3>
    {tag ? (
      <span class="shrink-0 rounded-full border border-zinc-200 px-2 py-0.5 text-xs text-zinc-600 dark:border-zinc-800 dark:text-zinc-300">
        {tag}
      </span>
    ) : null}
  </div>
  {desc ? <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-300">{desc}</p> : null}
</a>